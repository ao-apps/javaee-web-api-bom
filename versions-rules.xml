<ruleset
	comparisonMethod="maven"
	xmlns="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0 https://www.mojohaus.org/versions-maven-plugin/xsd/rule-2.0.0.xsd"
>
	<rules>
		<!-- Stay on Java EE Web API 6 -->
		<rule groupId="javax" artifactId="javaee-web-api" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">.*</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="javax.el" artifactId="javax.el-api" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">.*</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="javax.servlet" artifactId="javax.servlet-api" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">.*</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="javax.servlet.jsp" artifactId="javax.servlet.jsp-api" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">.*</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="javax.servlet" artifactId="jstl" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">.*</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="org.glassfish.web" artifactId="jstl-impl" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">.*</ignoreVersion>
			</ignoreVersions>
		</rule>
	</rules>
</ruleset>
